{
  "name": "book-portfolio",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "description": "A 3D interactive portfolio book built with React, TypeScript, and SCSS",
  "keywords": [
    "portfolio",
    "react",
    "typescript",
    "3d",
    "animation",
    "vite"
  ],
  "author": "trinhquocthinh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trinhquocthinh/book-portfolio.git"
  },
  "homepage": "https://trinhquocthinh.github.io/book-portfolio/",
  "bugs": {
    "url": "https://github.com/trinhquocthinh/book-portfolio/issues"
  },
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc -b",
    "test": "yarn type-check && yarn lint",
    "pre-push": "yarn test && yarn build",
    "preview": "vite preview",
    "prepare": "husky",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
